<h2>Atualizar Perfil</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Aguardando confirmação: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :nova_senha %> <i>(deixar em branco caso não queira alterar)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> caracteres ou mais</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :confirmar_nova_senha %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :senha_atual %><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Atualizar" %>
  </div>
<% end %>
<br><br><br><br><br><br>

<h3>Excluir minha conta</h3>

<p><%= button_to "Deletar minha conta", registration_path(resource_name), data: { confirm: "Tem certeza que deseja excluir? Essa ação não é reversível." }, method: :delete %></p>

<%= link_to "Voltar", :back %>
