<p id="notice"><%= notice %></p>

<h1>Plants</h1>

<table>
  <thead>
    <tr>
      <th>Plant</th>
      <th>Plant name</th>
      <th>Water hour interval</th>
      <th>Fertilizer hour interval</th>
      <th>Prunning</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plants.each do |plant| %>
      <tr>
        <td><%= plant.plant_id %></td>
        <td><%= plant.plant_name %></td>
        <td><%= plant.water_hour_interval %></td>
        <td><%= plant.fertilizer_hour_interval %></td>
        <td><%= plant.prunning %></td>
        <td><%= link_to 'Show', plant %></td>
        <td><%= link_to 'Edit', edit_plant_path(plant) %></td>
        <td><%= link_to 'Destroy', plant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

