<p id="notice"><%= notice %></p>

<h1>Videos</h1>

<table>
  <thead>
  <tr>
    <th>Nome da planta</th>
    <th>Nome do video</th>
    <th>Provedor</th>
    <th>Link</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @video.each do |video| %>
    <tr>
      <td><%= video.nome_da_planta %></td>
      <td><%= video.nome_do_video %></td>
      <td><%= video.provedor %></td>
      <td><%= video.link %></td>
      <td><%= link_to 'Visualizar', video %></td>
      <td><%= link_to 'Editar', edit_videos_path(video) %></td>
      <td><%= link_to 'Deletar', video, method: :destroy, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

